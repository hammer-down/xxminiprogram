/**app.wxss**/
page{
  font-family: 微软雅黑;
}
.container {
  height: 100%;
  width: 100%;
  margin-top: 4em;
  background-color: #e8e8e8;
} 
.placeholder{
  height: 1.5em;
  background-color: #000000;
  position: fixed;
  width: 100%;
  z-index: 99;
  left: 0;
  top:0;
}
/******通用页头*******/
.page_title {
  text-align: center;
  border-bottom: 1px solid #346dd6;
  height: 3em;
  position:relative;
  background: #ffffff;
  position: fixed;
  width: 100%;
  z-index: 999;
  left:0;
  top:1.5em;
  background-color: #346dd6;
}
.page_title .back{
  width: 1.5em;
  height: 1.5em;
  position: absolute;
  left: 1em;
  top:0.7em;
}
.page_title .info{
  line-height: 2.5em;
}
