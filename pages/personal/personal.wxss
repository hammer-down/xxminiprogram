/* pages/personal/personal.wxss */
page{
   background: #e8e8e8e8;
}
.logo{
  width: 1.5em;
  height: 1.5em;
  position: absolute;
  left: 1em;
  top: 0.8em;
}
.title{
  font-family: 微软雅黑;
  width: 4em;
  height: 2em;
  position: absolute;
  left: 2em;
  top: 0.8em;
}
.personal{
  width: 100%;
  height: 4em;
  overflow:hidden;
  margin-top:1em;
  padding-bottom: 0.8em;
  background: #ffffff;
  box-shadow: 2px 5px 50px #d1d1d1;
  display: flex;
}
.personal .personal_img{
  width: 3em;
  height: 3em;
  border-radius: 50%;
  position: relative;
  margin-top:0.6em;
  margin-bottom: 0.6em;
  margin-left: 2em;
}
.personal .summary{
  display: flex;
}
.personal .summary  .name{
  position: relative;
  margin-top: 1.5em;
  margin-bottom: 1.5em;
  margin-left: 2em;
}
.personal .summary  .state{
  position: relative;
  margin-left: 5em;
  margin-top: 1.5em;
  margin-bottom: 1.5em;
  font-size: 1em;
}
/*我的收藏
*/
.myCollection{
  border-bottom: 1px solid #e8e8e8;
  height: 3em;
  margin-top: 1em;
  background: #ffffff
}
.myCollection .collection_name{
  display: flex;
  font-size: 1em;
  padding: 0.8em 1em 0.5em 1em;
}
.myCollection .collection_name .collection_picture{
  width: 1em;
  height: 1em;
  position: relative;
  margin-top: 0.2em;
}
.myCollection .collection_name .collection_right{
  width: 1.3em;
  height: 1em;
  position: relative;
  margin-top: 0.2em;
  margin-left: 11.3em;
}
