@import "/pages/search/item-template/item-template.wxss";
.dishOne {
  width: 100%;
  height: 70px;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 0.5em;
  padding-bottom: 0.8em;
  background: #fff;
  box-shadow: 2px 5px 50px #d1d1d1;
  display: flex;
  background: #fff;
  border-radius: 10px;
}

.dishOne .dish_img {
  width: 4.5rem;
  height: 4rem;
  position: relative;
  padding: 0.5em 1em 0.5em 0.5em;
}

.dishOne .summary {
  display: flex;
  flex-direction: column;
}

.dishOne .summary .dishdes {
  display: flex;
}

.dishOne .summary .dishdes text {
  margin: 1em 1em 1em 0.5em;
}
