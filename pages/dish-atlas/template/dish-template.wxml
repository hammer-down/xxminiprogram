<template name="dishTemplate">
  <block wx:for="{{dishData}}" wx:for-item="item" wx:key="key">
    <view class='dishOne'>
      <image bindtap="goToDishDetail" class="dish_img" src="{{item.dishImgUrl}}"></image>
      <view class='summary'>
        <view class='dishdes'>
          <view class='name'>
            <text>{{item.dishName}}</text>
          </view>
          <view class='price'>
            <text>¥{{item.dsihPrice}}元/份</text>
          </view>
        </view>
      </view>
    </view>
  </block>
</template>