/* pages/course/index.wxss */
.audio_footer{
  height: 6em;
  border-top: 1px solid #e8e8e8;
  width: 100%;
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  background: #fff;
}
.audio_footer .top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0.5em;
}
.audio_footer .top progress{
  width: 280px;
  padding: 0 0.5em;
}
.audio_footer .bottom{
    text-align: center;
}
.audio_footer .bottom image{
  width: 2em;
  height: 2em;
  margin: auto 1em;
  vertical-align: middle;
}
.audio_footer .bottom image.play_btn{
  width: 2.5em;
  height: 2.5em;
}
.constent .article_title{
  position: relative;
}
.constent .article_title .wrapper{
  width: 100%;
  height: 250px;
}
.constent .article_title text{
   display: block;
   color: #ffff;
}
.constent .article_title .article_info{
  position: absolute;
  bottom: 2em;
  padding: 0 1em 0em 1em;
}
.constent .article_title .title{
  font-size: 1.25em;
}
.constent .article_title .suthor{
  font-size: 0.9em;
  margin-top: 1em;
}
.teacher_info{
  width: 300px;
  height: 100px;
  border: 1px solid #d1d1d1;
  border-radius: 10px;
  margin: 0 auto;
  transform: translateY(-30px);
  background: #fff;
  box-shadow: 2px 2px 5px #d1d1d1;
}
.paragrah{
  padding: 1em;
}
.paragrah .p_title{
  font-size: 1.25em;
  font-weight: bold;
  margin: 1em 0;
  padding-bottom: 0.5em;
  border-bottom: 2px solid #333333;
}
.paragrah .p_title image{
  width: 1em;
  height: 1em;
  vertical-align: middle;
  margin-right: 0.5em;
}
